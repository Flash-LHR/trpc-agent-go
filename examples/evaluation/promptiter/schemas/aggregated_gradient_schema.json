{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "issues",
    "by_section"
  ],
  "properties": {
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "key",
          "summary",
          "action",
          "cases"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "P0",
              "P1"
            ]
          },
          "key": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "action": {
            "type": "string",
            "minLength": 1
          },
          "cases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "by_section": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "notes": {
      "type": "string"
    }
  }
}